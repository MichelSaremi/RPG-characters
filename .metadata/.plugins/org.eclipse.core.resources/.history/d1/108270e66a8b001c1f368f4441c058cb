
public class Weapon extends Item {
	
	//---properties
	private String[] type;
	private int damage;
	private int attacks_per_second;
	
	//---constructors
	public Weapon(String name, int req_lvl, String[] slot, String[] type, int damage, int a_p_s) {
		super(name, req_lvl, slot);
		this.type = type;
		this.damage = damage;
		this.attacks_per_second = a_p_s;
	}
	//---getters
	public String[] getType() {
		return type;
	}
	public int getDamage() {
		return damage;
	}
	public int getAttacks_per_second() {
		return attacks_per_second;
	}
}
